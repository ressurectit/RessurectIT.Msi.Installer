{
    "UpdatesJsonUrl": "http://localhost:8888/updates.json",
    "CheckInterval": 300000,
    "Serilog":
    {
        "Using":
        [
            "Serilog.Sinks.File",
            "Serilog.Sinks.EventLog",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Debug"
        ],
        "MinimumLevel":
        {
            "Default": "Verbose",
            "Override":
            {
                "System": "Error"
            }
        },
        "WriteTo":
        [
            {
                "Name": "Debug"
            },
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args":
                {
                    "path": "./Logs/Errors.logs",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "EventLog",
                "Args":
                {
                    "source": "RessurectIT.Msi.Installer",
                    "logName": "Application",
                    "manageEventSource": true,
                    "restrictedToMinimumLevel": "Error" 
                }
            }
        ],
        "Enrich":
        [
            "FromLogContext",
            "WithMachineName"
        ]
    }
}