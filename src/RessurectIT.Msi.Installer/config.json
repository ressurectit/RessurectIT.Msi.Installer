{
    "Urls": "http://localhost:8765",
    "UpdatesJsonUrl": "http://localhost:8888/updates.json",
    "CheckInterval": 300000,
    "RemoteLogRestUrl": "http://localhost/api/log",
    "Progress":  "App", 
    "Serilog":
    {
        "Using":
        [
            "Serilog.Sinks.File",
            "Serilog.Sinks.EventLog",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Debug",
            "RessurectIT.Msi.Installer",
            "Serilog.Settings.Configuration"
        ],
        "MinimumLevel":
        {
            "Default": "Verbose",
            "Override":
            {
                "System": "Error"
            }
        },
        "WriteTo":
        [
            {
                "Name": "Debug"
            },
            {
                "Name": "Console"
            },
            {
                "Name": "Logger",
                "Args":
                {
                    "configureLogger":
                    {
                        "WriteTo":
                        [
                            {
                                "Name": "RestLogger"
                            }
                        ],
                        "Filter":
                        [
                            {
                                "Name": "ByIncludingOnly",
                                "Args":
                                {
                                    "expression": "@Level = 'Error' or Contains(@MessageTemplate, 'MSIEXEC LOG:')"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args":
                {
                    "configureLogger":
                    {
                        "WriteTo":
                        [
                            {
                                "Name": "File",
                                "Args":
                                {
                                    "path": "./Logs/Error.logs",
                                    "rollingInterval": "Day"
                                }
                            }
                        ],
                        "Filter":
                        [
                            {
                                "Name": "ByIncludingOnly",
                                "Args":
                                {
                                    "expression": "@Level = 'Error'"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args":
                {
                    "configureLogger":
                    {
                        "WriteTo":
                        [
                            {
                                "Name": "File",
                                "Args":
                                {
                                    "path": "./Logs/App.logs",
                                    "rollingInterval": "Day"
                                }
                            }
                        ],
                        "Filter":
                        [
                            {
                                "Name": "ByExcluding",
                                "Args":
                                {
                                    "expression": "@Level = 'Error' or Contains(@MessageTemplate, 'MSIEXEC LOG:')"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "EventLog",
                "Args":
                {
                    "source": "RessurectIT.Msi.Installer",
                    "logName": "Application",
                    "manageEventSource": false,
                    "restrictedToMinimumLevel": "Error"
                }
            }
        ],
        "Enrich":
        [
            "WithMachineName"
        ]
    }
}