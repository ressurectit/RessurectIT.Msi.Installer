<?xml version='1.0' encoding='UTF-8'?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <UI>
            <Dialog Id="ConfigurationDlg" Width="370" Height="270" Title="[ProductName] [Setup]" NoMinimize="yes">
                <Control Id="UpdateUrlLabel" Type="Text" X="45" Y="73" Width="100" Height="15" TabSkip="no" Text="Update json URL:"/>
                <Control Id="UpdateUrlEdit" Type="Edit" X="45" Y="85" Width="220" Height="18" Property="UPDATE_JSON_URL" />

                <Control Id="CheckIntervalLabel" Type="Text" X="45" Y="105" Width="100" Height="15" TabSkip="no" Text="Check interval:"/>
                <Control Id="CheckIntervalEdit" Type="Edit" X="45" Y="117" Width="220" Height="18" Property="CHECK_INTERVAL" />

                <Control Id="AllowSameVersionLabel" Type="Text" X="45" Y="137" Width="100" Height="15" TabSkip="no" Text="Allow same version:"/>
                <Control Id="AllowSameVersionEdit" Type="CheckBox" X="45" Y="146" Width="60" Height="18" Property="ALLOW_SAME_VERSION" CheckBoxValue="1" />

                <Control Id="ProgressTypeLabel" Type="Text" X="45" Y="169" Width="100" Height="15" TabSkip="no" Text="Progress type:"/>
                <Control Id="ProgressTypeEdit" Type="ComboBox" ComboList="yes" X="45" Y="181" Width="220" Height="18" Property="PROGRESS_TYPE" >
                    <ComboBox Property="PROGRESS_TYPE">
                        <ListItem Value="None" />
                        <ListItem Value="MsiExec" />
                        <ListItem Value="App" />
                    </ComboBox>
                </Control>

                <!-- BUTTONS -->
                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back">
                    <Publish Event="NewDialog" Value="WelcomeDlg">1</Publish>
                </Control>

                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next">
                    <Publish Event="NewDialog" Value="SetupTypeDlg">1</Publish>
                </Control>

                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
                    <Publish Event="SpawnWaitDialog" Value="WaitForCostingDlg">CostingComplete = 1</Publish>
                    <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
                </Control>

                <!-- REST OF WINDOW -->
                <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
                <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes">
                    <Text>Please provide configuration parameters</Text>
                </Control>

                <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

                <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
                    <Text>{\WixUI_Font_Title}Configuration</Text>
                </Control>
                
                <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
            </Dialog>
        </UI>
    </Fragment>
</Wix>