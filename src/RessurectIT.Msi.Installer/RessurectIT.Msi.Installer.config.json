{
    "UpdatesJsonUrl": "http://localhost/updates.json",
    "CheckInterval": 300000,
    "RemoteLogRestUrl": "http://localhost/api/log",
    "Serilog":
    {
        "Using":
        [
            "Serilog.Sinks.File",
            "Serilog.Sinks.EventLog",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Debug",
            "RessurectIT.Msi.Installer",
            "Serilog.Settings.Configuration"
        ],
        "MinimumLevel":
        {
            "Default": "Verbose",
            "Override":
            {
                "System": "Error"
            }
        },
        "WriteTo":
        [
            {
                "Name": "Debug"
            },
            {
                "Name": "Console"
            },
            {
                "Name": "Logger",
                "Args": 
                {
                    "configureLogger": 
                    {
                        "WriteTo": 
                        [
                            {
                                "Name": "RestLogger"
                            }
                        ],
                        "Filter": 
                        [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": 
                                {
                                    "expression": "@Level = 'Error' or Contains(@MessageTemplate, 'MSIEXEC LOG:')"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "File",
                "Args":
                {
                    "path": "./Logs/Errors.logs",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "EventLog",
                "Args":
                {
                    "source": "RessurectIT.Msi.Installer",
                    "logName": "Application",
                    "manageEventSource": true,
                    "restrictedToMinimumLevel": "Error"
                }
            }
        ],
        "Enrich":
        [
            "WithMachineName"
        ]
    }
}